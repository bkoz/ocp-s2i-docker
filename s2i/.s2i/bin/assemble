#!/bin/sh

/usr/local/s2i/assemble

echo "****** Copying over ROOT.xml to conf directory ******"
mkdir -vp ${JWS_HOME}/conf/Catalina/localhost
cp -v /tmp/src/.s2i/ROOT.xml ${JWS_HOME}/conf/Catalina/localhost


echo "****** Adding jpda to run command ******"
search="catalina.sh run"
replace="catalina.sh jpda run"
sed -i "s/${search}/${replace}/g" ${JWS_HOME}/bin/launch.sh