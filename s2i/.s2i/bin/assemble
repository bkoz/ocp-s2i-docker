#!/bin/sh

/usr/local/s2i/assemble

echo "****** Copying over ROOT.xml to conf directory ******"
mkdir -vp ${JWS_HOME}/conf/Catalina/localhost
cp -v /tmp/src/custom/ROOT.xml ${JWS_HOME}/conf/Catalina/localhost


echo "****** Copying over jpda-launch.sh to bin directory ******"
cp -v /tmp/src/custom/jpda-launch.sh ${JWS_HOME}/bin
